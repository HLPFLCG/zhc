{
  "name": "zhc-website",
  "version": "1.0.0",
  "description": "Zaitsev Holding Group Website - Bulletproof Autonomous Perfection",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:visual": "playwright test --visual",
    "test:mutation": "stryker run",
    "test:all": "npm run test && npm run test:e2e && npm run test:visual",
    "lighthouse": "lighthouse http://localhost:8080 --output=html --output-path=./reports/lighthouse.html",
    "audit": "npm run test && npm run lighthouse",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "validate": "html-validator *.html"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.8.2",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "html-validator": "^6.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.0.0",
    "prettier": "^3.1.0",
    "stryker": "^8.0.0",
    "stryker-jest-runner": "^8.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "jsdom": "^23.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/accessibility-test.js",
      "!js/security.js",
      "!js/performance.js",
      "!js/accessibility.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}